<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/cartimage"
        android:layout_width="76dp"
        android:layout_height="83dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="15dp"
        >

    </ImageView>
    <TextView
        android:id="@+id/tv_cart_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adirondack"
        android:textColor="#4F4F4F"
        android:textSize="25dp"
        android:layout_toRightOf="@id/cartimage"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textStyle="normal"
       />

    <TextView
    android:id="@+id/tv_cart_2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="(Table)"
    android:textColor="#4F4F4F"
    android:layout_toRightOf="@id/cartimage"
    android:layout_below="@id/tv_cart_1"
    android:layout_marginTop="9dp"
    android:layout_marginLeft="15dp"
    android:textSize="11sp"/>



    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:layout_toRightOf="@id/cartimage"
        android:layout_below="@id/tv_cart_2"
        />

    <TextView
        android:id="@+id/tv_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/delete"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="RS. 45"
        android:textColor="#4F4F4F"
        android:textSize="16dp" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/delete"
        android:layout_width="49dp"
        android:layout_height="49dp"
        android:src="@drawable/ic_vector_assest_delete"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/titleBar"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_cart_1"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="10dp"
        />

</RelativeLayout>
</HorizontalScrollView>