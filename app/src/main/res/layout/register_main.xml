<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fe3f3f"
    tools:context=".register.Register">

    <TextView
        android:id="@+id/tv_neoStore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="NeoSTORE"
        android:textColor="@color/textColor"
        android:textSize="135px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/ed_first_name"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="80px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_person"
        android:ems="10"
        android:hint="First Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_neoStore" />

    <EditText
        android:id="@+id/ed_last_name"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_person"
        android:ems="10"
        android:hint="Last Name"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_first_name" />

    <EditText
        android:id="@+id/ed_email"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_email"
        android:ems="10"
        android:hint="Email"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_last_name" />

    <EditText
        android:id="@+id/ed_password"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_lock"
        android:ems="10"
        android:hint="Password"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_email" />

    <EditText
        android:id="@+id/ed_c_password"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_lock"
        android:ems="10"
        android:hint="Confirm Password"
        android:inputType="text"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_password" />

    <RadioGroup
        android:id="@+id/rdg_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginLeft="110px"
        android:layout_marginTop="60px"
        android:layout_marginEnd="120dp"
        android:layout_marginRight="80px"
        android:layout_marginBottom="19dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/ed_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_c_password">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:text="Gender"
            android:textColor="@color/textColor"
            android:textSize="16dp"
            app:layout_constraintTop_toBottomOf="@+id/ed_c_password" />

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:buttonTint="@color/textColor"
            android:inputType="text"
            android:text="Male"
            android:textColor="@color/textColor"
            android:textSize="16dp" />

        <RadioButton
            android:id="@+id/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:buttonTint="@color/textColor"
            android:inputType="text"
            android:text="Female"
            android:textColor="@color/textColor"
            android:textSize="16dp" />

    </RadioGroup>

    <TextView
        android:id="@+id/tv_gender_er"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Select Gender "
        android:textColor="@color/textColor"
        android:textSize="18sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rdg_gender" />

    <EditText
        android:id="@+id/ed_phone"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100px"
        android:layout_marginTop="60px"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100px"
        android:background="@drawable/stroke_box"
        android:drawableLeft="@drawable/ic_vector_assest_phone"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        android:maxLength="10"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/textColor"
        android:textColorHint="@color/textColor"
        android:textSize="18dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_gender_er" />

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100px"
        android:layout_marginTop="40px"
        android:layout_marginRight="100px"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ed_phone">

        <RadioGroup
            android:id="@+id/rdg_chkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/chkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="@color/textColor"
                android:text="I agree the Terms and Conditions"
                android:textColor="@color/textColor"
                android:textSize="13dp" />

        </RadioGroup>

        <TextView
            android:id="@+id/tv_chkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" "
            android:textColor="@color/textColor"
            android:textSize="18sp"
            android:visibility="gone"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="880px"
        android:layout_height="120px"
        android:layout_marginTop="40px"
        android:background="@drawable/rounded_button"
        android:text="Register"
        android:textColor="#E91C1A"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear" />

</androidx.constraintlayout.widget.ConstraintLayout>
