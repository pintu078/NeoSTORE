<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_silver"
    android:orientation="vertical"
    tools:context=".view.drawer.order.Address">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/titleBar">

        <ImageButton
            android:id="@+id/imgbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/titleBar"
            android:src="@drawable/ic_back_button" />

        <TextView
            android:id="@+id/tooltext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:gravity="center"
            android:text="Add Address"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:layout_marginBottom="18dp"
                android:text="ADDRESS"
                android:textColor="@color/address_tx"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ed_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="29dp"
                android:background="@drawable/stroke_box"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:textColor="@color/address_tx"
                android:textSize="18dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="LANDMARK"
                android:textColor="@color/address_tx"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/ed_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="29dp"
                android:background="@drawable/stroke_box"
                android:backgroundTint="@color/white"
                android:ems="10"
                android:hint="LANDMARK"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/address_tx"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="7dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text="CITY"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/ed_city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="29dp"
                        android:background="@drawable/stroke_box"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="MUMBAI"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text="ZIP CODE"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/ed_zip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="29dp"
                        android:background="@drawable/stroke_box"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="400063"
                        android:inputType="number"
                        android:padding="10dp"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="7dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text="STATE"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/ed_state"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="29dp"
                        android:background="@drawable/stroke_box"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="MAHARASHTRA"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="18dp"
                        android:text="COUNTRY"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                    <EditText
                        android:id="@+id/ed_country"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="29dp"
                        android:background="@drawable/stroke_box"
                        android:backgroundTint="@color/white"
                        android:ems="10"
                        android:hint="INDIA"
                        android:inputType="text"
                        android:padding="10dp"
                        android:textColor="@color/address_tx"
                        android:textSize="18dp" />

                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_place_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_button"
                android:backgroundTint="@color/titleBar"
                android:text="PLACE ORDER"
                android:textColor="@color/white"
                android:textSize="26sp" />

            <ProgressBar
                android:id="@+id/progress_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="30dp"
                android:indeterminateTint="@color/titleBar"
                android:visibility="gone" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>

